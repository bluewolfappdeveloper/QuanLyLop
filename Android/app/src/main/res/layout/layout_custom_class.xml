<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imClassRoom"
        android:layout_width="@dimen/size100dp"
        android:layout_height="@dimen/size100dp"
        android:layout_marginTop="@dimen/size10dp"
        android:layout_marginLeft="@dimen/size10dp"
        android:layout_marginRight="@dimen/size10dp"
        android:src="@drawable/classroom" />

    <TextView
        android:id="@+id/txtNameClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size18sp"
        android:textStyle="bold"

        android:layout_marginTop="@dimen/size10dp"
        android:layout_centerHorizontal="true"
        android:text="Tên Lớp"
        android:textColor="@color/DarkBlue"
        android:layout_below="@+id/imClassRoom"/>
</RelativeLayout>