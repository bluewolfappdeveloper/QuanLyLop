<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBarStudentFeeInfo"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/CustomBlue"
        app:titleTextColor="@color/white"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


            <RadioButton
                android:id="@+id/rdotake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dadong1"
                android:layout_margin="@dimen/size10dp"
                android:textSize="@dimen/size18sp"/>
            <RadioButton
                android:id="@+id/rdountake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chuadong1"
                android:layout_margin="@dimen/size10dp"
                android:textSize="@dimen/size18sp"/>




    </LinearLayout>

    <ListView
        android:id="@+id/lststudentfeeinfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>
</LinearLayout>