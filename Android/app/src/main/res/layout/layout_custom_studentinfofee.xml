<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvNameStudentTake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hovatenhocsinh"
            android:textSize="@dimen/size20dp"
            android:layout_margin="@dimen/size10dp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvPhoneStudentTake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số điện thoại"
            android:layout_below="@+id/tvNameStudentTake"
            android:textSize="@dimen/size20dp"
            android:layout_marginLeft="@dimen/size10dp"
            android:textColor="@color/black"
            />
    </RelativeLayout>



</RelativeLayout>