<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvNameFeeTake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Tên phí"
            android:textSize="@dimen/size20dp"
            android:layout_margin="@dimen/size10dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvDateTake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày đóng: "
            android:layout_below="@+id/tvNameFeeTake"
            android:textSize="@dimen/size20dp"
            android:layout_marginLeft="@dimen/size10dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvTakeFee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Học phí: "
            android:layout_below="@+id/tvDateTake"
            android:textSize="@dimen/size20dp"
            android:layout_marginLeft="@dimen/size10dp"
            android:textColor="@color/black"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/imgdeletetakefee"
                android:layout_width="@dimen/size40sp"
                android:layout_height="@dimen/size80dp"
                android:layout_margin="@dimen/size10dp"
                android:src="@drawable/delete" />

        </LinearLayout>




    </RelativeLayout>



</RelativeLayout>