<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvNameClass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Tên lớp"
            android:textSize="@dimen/size20dp"
            android:layout_margin="@dimen/size10dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvFeeClass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Học phí"
            android:layout_below="@+id/tvNameClass"
            android:textSize="@dimen/size20dp"
            android:layout_marginLeft="@dimen/size10dp"
            />

        <TextView
            android:id="@+id/tvCountClass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng: "
            android:layout_below="@+id/tvFeeClass"
            android:textSize="@dimen/size20dp"
            android:layout_marginLeft="@dimen/size10dp"
            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/imgdelete"
                android:layout_width="@dimen/size30sp"
                android:layout_height="@dimen/size70sp"
                android:layout_margin="@dimen/size10dp"
                android:src="@drawable/delete" />

            <ImageView
                android:id="@+id/imgedit"
                android:layout_width="@dimen/size35sp"
                android:layout_height="@dimen/size70sp"
                android:layout_alignParentRight="true"
                android:layout_alignLeft="@+id/imgedit"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/size10dp"
                android:src="@drawable/edit"/>
        </LinearLayout>




    </RelativeLayout>



</RelativeLayout>